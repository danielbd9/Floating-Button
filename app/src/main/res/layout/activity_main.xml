<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView android:id="@+id/iv_float"
        android:layout_width="@dimen/size_circle"
        android:layout_height="@dimen/size_circle"
        android:layout_marginEnd="@dimen/margin_md"
        android:layout_marginBottom="@dimen/margin_md"
        android:layout_alignParentBottom="true"
        android:layout_gravity="end"
        android:foregroundTint="@color/white"
        android:background="@drawable/shape_circle"
        android:contentDescription="@string/fab_transformation_scrim_behavior" app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent" app:tint="@color/black" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>